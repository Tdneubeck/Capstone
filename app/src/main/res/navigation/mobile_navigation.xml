<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="edu.missouri.collegerewards.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_my_rewards2"
            app:destination="@id/navigation_my_rewards" />
    </fragment>

    <fragment
        android:id="@+id/navigation_upcoming_events"
        android:name="edu.missouri.collegerewards.ui.upcomingevents.UpcomingEventsFragment"
        android:label="@string/title_upcoming_events"
        tools:layout="@layout/fragment_upcoming_events" />

    <fragment
        android:id="@+id/navigation_my_rewards"
        android:name="edu.missouri.collegerewards.ui.myrewards.MyRewardsFragment"
        android:label="@string/title_my_rewards"
        tools:layout="@layout/fragment_my_rewards" />

    <fragment
        android:id="@+id/navigation_leaderboard"
        android:name="edu.missouri.collegerewards.ui.leaderboard.LeaderboardFragment"
        android:label="@string/title_leaderboard"
        tools:layout="@layout/fragment_leaderboard" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="edu.missouri.collegerewards.ui.conditionalnav.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login"/>

    <fragment
        android:id="@+id/navigation_register"
        android:name="edu.missouri.collegerewards.ui.conditionalnav.RegisterFragment"
        android:label="@string/register"
        tools:layout="@layout/fragment_registerpage"/>


</navigation>